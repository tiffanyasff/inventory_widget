<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- ðŸ”¹ LOGIN (HU 2.0) -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.univalle.inventorywidget.view.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeInventoryFragment"
            app:destination="@id/homeInventoryFragment" />
    </fragment>

    <!-- ðŸ”¹ HOME INVENTARIO (HU 3.0) -->
    <fragment
        android:id="@+id/homeInventoryFragment"
        android:name="com.univalle.inventorywidget.view.fragment.HomeInventoryFragment"
        android:label="fragment_home_inventory"
        tools:layout="@layout/fragment_home_inventory">
        <action
            android:id="@+id/action_homeInventoryFragment_to_addItemFragment"
            app:destination="@id/addItemFragment" />
        <action
            android:id="@+id/action_homeInventoryFragment_to_itemDetailsFragment"
            app:destination="@id/itemDetailsFragment" />
        <action
            android:id="@+id/action_homeInventoryFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- ðŸ”¹ AGREGAR PRODUCTO (HU 4.0) -->
    <fragment
        android:id="@+id/addItemFragment"
        android:name="com.univalle.inventorywidget.view.fragment.AddItemFragment"
        android:label="fragment_add_item"
        tools:layout="@layout/fragment_add_item" />

    <!-- ðŸ”¹ DETALLE PRODUCTO (HU 5.0) -->
    <fragment
        android:id="@+id/itemDetailsFragment"
        android:name="com.univalle.inventorywidget.view.fragment.ItemDetailsFragment"
        android:label="fragment_item_details"
        tools:layout="@layout/fragment_item_details">
        <action
            android:id="@+id/action_itemDetailsFragment_to_itemEditFragment"
            app:destination="@id/itemEditFragment" />
    </fragment>

    <!-- ðŸ”¹ EDITAR PRODUCTO (HU 6.0) -->
    <fragment
        android:id="@+id/itemEditFragment"
        android:name="com.univalle.inventorywidget.view.fragment.ItemEditFragment"
        android:label="fragment_item_edit"
        tools:layout="@layout/fragment_item_edit">
        <action
            android:id="@+id/action_itemEditFragment_to_homeInventoryFragment"
            app:destination="@id/homeInventoryFragment"
            app:popUpTo="@+id/homeInventoryFragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>
