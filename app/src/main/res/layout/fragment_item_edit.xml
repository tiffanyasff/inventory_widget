<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.univalle.inventorywidget.viewmodel.InventoryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:padding="20dp"
        tools:context=".view.fragment.ItemEditFragment">

        <!-- TOOLBAR PERSONALIZADO -->
        <LinearLayout
            android:id="@+id/toolbarEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Botón atrás -->
            <ImageView
                android:id="@+id/btnBackEdit"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_arrow_back_24"
                android:padding="4dp"
                android:contentDescription="Volver" />

            <!-- Título -->
            <TextView
                android:id="@+id/tvTituloEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar Artículo"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:layout_marginStart="10dp" />

        </LinearLayout>

        <!-- CAMPO NOMBRE -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:hint="Nombre del artículo"
            android:background="@drawable/bg_redondo"
            android:padding="14dp"
            android:inputType="textCapSentences"
            app:layout_constraintTop_toBottomOf="@id/toolbarEdit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- CAMPO PRECIO -->
        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="Precio"
            android:background="@drawable/bg_redondo"
            android:padding="14dp"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/etName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- CAMPO CANTIDAD -->
        <EditText
            android:id="@+id/etQuantity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="Cantidad"
            android:background="@drawable/bg_redondo"
            android:padding="14dp"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/etPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- BOTÓN GUARDAR -->
        <Button
            android:id="@+id/btnEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Guardar cambios"
            android:backgroundTint="@color/primaryButton"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/etQuantity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
