<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.univalle.inventorywidget.viewmodel.InventoryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColorBlack"
        tools:context=".view.fragment.AddItemFragment">

        <!-- Top bar -->
        <LinearLayout
            android:id="@+id/topBar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/backgroundColorGray"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_arrow_back"
                />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar producto"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginStart="14dp"/>
        </LinearLayout>

        <!-- INPUT: Código Producto -->
        <EditText
            android:id="@+id/etProductCode"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="@color/backgroundColorGray"
            android:hint="Código producto"
            android:padding="14dp"
            android:textColor="@android:color/white"
            android:textColorHint="#CCCCCC"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"/>

        <!-- INPUT: Nombre artículo -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@color/backgroundColorGray"
            android:hint="Nombre artículo"
            android:padding="14dp"
            android:textColor="@android:color/white"
            android:textColorHint="#CCCCCC"
            android:inputType="text"
            android:maxLength="20"
            app:layout_constraintTop_toBottomOf="@id/etProductCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"/>

        <!-- INPUT: Precio -->
        <EditText
            android:id="@+id/etPrice"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@color/backgroundColorGray"
            android:hint="Precio"
            android:padding="14dp"
            android:textColor="@android:color/white"
            android:textColorHint="#CCCCCC"
            android:inputType="numberDecimal"
            app:layout_constraintTop_toBottomOf="@id/etName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"/>

        <!-- INPUT: Cantidad -->
        <EditText
            android:id="@+id/etQuantity"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@color/backgroundColorGray"
            android:hint="Cantidad"
            android:padding="14dp"
            android:textColor="@android:color/white"
            android:textColorHint="#CCCCCC"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/etPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"/>

        <!-- BOTÓN Guardar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveInventory"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:text="Guardar"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/backgroundColorOrange"
            android:enabled="false"
            android:alpha="0.5"
            app:cornerRadius="25dp"
            app:layout_constraintTop_toBottomOf="@id/etQuantity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
