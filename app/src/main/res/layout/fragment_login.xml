<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2B2B2B"
        tools:context=".view.fragment.LoginFragment">

        <!-- Imagen de inventario (superior derecha) -->
        <ImageView
            android:id="@+id/imgInventory"
            android:layout_width="109dp"
            android:layout_height="117dp"
            android:layout_margin="16dp"
            android:contentDescription="@string/inventory_image"
            android:src="@drawable/ic_inventory"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Título Inventory -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inventory"
            android:textColor="#E7522E"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/imgInventory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- Animación de huella digital -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieFingerprint"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_rawRes="@raw/fingerprint_verification"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
