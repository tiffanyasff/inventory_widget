<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- FILA SUPERIOR: ICONO + TEXTO + OJO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="6dp">

        <!-- Icono de la App -->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/inventory"
            android:contentDescription="Inventory Icon"
            android:layout_marginEnd="12dp"
            android:scaleType="fitCenter" />

        <!-- Texto pregunta -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="¿Cuánto tengo de inventario?"
            android:textSize="15sp"
            android:textStyle="normal"
            android:textColor="#FFFFFF" />

        <!-- Ícono del OJO (ImageView, NO ImageButton) -->
        <ImageView
            android:id="@+id/widget_visibility_icon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_eye_on"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="Toggle Visibility" />
    </LinearLayout>

    <!-- SALDO -->
    <TextView
        android:id="@+id/widget_total_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ ****"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_gravity="end"
        android:layout_marginTop="-8dp"/>

    <!-- FILA INFERIOR: INVENTORY + GESTIONAR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Inventory"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#e7522e" />

        <TextView
            android:id="@+id/widget_manage_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestionar Inventario"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/widget_manage_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_edit"
            android:tint="#FA8523"
            android:contentDescription="Settings" />
    </LinearLayout>

</LinearLayout>
