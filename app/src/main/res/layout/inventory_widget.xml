<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="10dp">

    <!-- FILA SUPERIOR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="2dp">

        <!-- Ícono principal (72dp como el del compañero) -->
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/inventory"
            android:contentDescription="Inventory Icon"
            android:scaleType="fitCenter"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="6dp"/>

        <!-- Texto + Ojo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="-16dp">

        <TextView
                android:id="@+id/tv_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Cuánto tengo de inventario?"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:layout_marginRight="8dp"
                android:includeFontPadding="false"/>

            <ImageView
                android:id="@+id/widget_visibility_icon"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/ic_eye_on"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>
        </LinearLayout>
    </LinearLayout>

    <!-- SALDO (misma alineación del compañero: arriba, a la derecha, más visible) -->
    <TextView
        android:id="@+id/widget_total_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ ****"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_gravity="end"
        android:layout_marginTop="-32dp"
        android:layout_marginBottom="2dp"
        android:includeFontPadding="false"/>

    <!-- FILA INFERIOR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_inventory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Inventory"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#e7522e"
            android:includeFontPadding="false"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/widget_manage_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestionar Inventario"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:includeFontPadding="false"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="6dp"/>

        <ImageView
            android:id="@+id/widget_manage_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_edit"
            android:tint="#FA8523"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>
    </LinearLayout>

</LinearLayout>
