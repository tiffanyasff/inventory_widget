<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de fondo -->
    <solid android:color="@color/white" />

    <!-- Borde -->
    <stroke
        android:width="1dp"
        android:color="@color/gray" />

    <!-- Bordes redondeados -->
    <corners android:radius="10dp" />

    <!-- Padding interno -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>
